<div class="row category">
    <div class="col-xl">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5>{{{title}}}</h5>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Add {{{title}}}
                    </button>
                </div>
                <table class="table table-striped category-table">
                    <thead>
                        <tr>
                            <th class="text-center" scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">subject</th>
                            <th scope="col">status</th>
                            <th class="text-center" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr >
                            <th class="text-center" scope="row">{{@index}}</th>
                            <td>
                                <span>{{title}}</span>
                            </td>
                            <td>{{subject.name}}</td>
                            <td style="cursor: pointer;">
                                <a href="/category/status/{{_id}}" >{{{status}}}</a>
                            </td>                            
                            <td>
                                <a class="btn btn-warning" href="/category/get/{{_id}}" data-toggle="modal" data-target="#editModal" onclick="edit('{{_id}}')" ><i class="fas fa-edit"></i></a>
                                <a class="btn btn-danger" href="/category/delete/{{_id}}" onclick="return confirm('Qaroringiz aniqmi??')"><i class="fas fa-times"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Yangi Bo'lim</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
            </div>
            <div class="modal-body">
                <form action="/category?_csrf={{csrf}}"  method="post">
                <input type="hidden" name="_csrf" value="{{csrf}}" />
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" 
                            placeholder="Enter Category title" />
                    </div>
                     <div class="form-group">
                        <label for="inputState">Subject</label>
                        <select name="subject" id="inputState" class="form-control custom-select">
                                <option class="p-2 m-2" selected disabled>Choose Subject...</option>
                            {{#each subjects}}
                                <option value="{{_id}}" class="p-2 m-2" >{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="custom-control custom-checkbox form-group">
                        <input type="checkbox" class="custom-control-input" id="Status" value="1" name="status"
                            checked />
                        <label class="custom-control-label" for="Status">status</label>
                    </div>
                    <div class="modal-footer pr-0">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Bekor qilish</button>
                        <button type="submit" class="btn btn-primary">Saqlash</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Formani O'zgartirish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
            </div>
            <div class="modal-body">
                <form action="/category/save?_csrf={{csrf}}" name="editForm"  method="post">
                    <div class="form-group">
                        <input type="hidden"  name="_id" value="" />
                        <input type="hidden"  name="_csrf" value="{{csrf}}" />
                        <input type="text" name="title" class="form-control"
                            placeholder="Enter Category title" />
                    </div>
                    <div class="form-group">
                        <label for="inputState">Subject</label>
                        <select name="subject" id="inputState" class="form-control custom-select">
                                <option class="p-2 m-2" selected disabled>Choose Subject...</option>
                            {{#each subjects}}
                                <option value="{{_id}}" class="p-2 m-2" >{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
    
                    <div class="custom-control custom-checkbox form-group">
                        <input type="checkbox" class="custom-control-input" id="stCat" value="1" name="status"
                            checked />
                        <label class="custom-control-label" for="stCat">status</label>
                    </div>
                    <div class="modal-footer pr-0">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Bekor qilish</button>
                        <button type="submit" class="btn btn-primary">Saqlash</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let editform=document.forms.editForm
    let image=document.getElementById('image')
    console.log(image)
    function edit(id){
        console.log(id)
        fetch(`http://localhost:8080/category/get/${id}`)
        .then(res=>res.json())
        .then(data=>{
            editform._id.value=data._id
            editform.title.value=data.title
            editform.subject.value=data.subject
            editform.status.checked=data.status ? true : false
        })
    }       
</script>